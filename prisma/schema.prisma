generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  googleid     String
  profileImage String?
  email        String         @unique
  name         String?
  WardrobeItem WardrobeItem[]
  FaceScans    FaceScans[]
}

model WardrobeItem {
  id              Int           @id @default(autoincrement())
  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  type            String
  image           String
  dominantColorId Int
  dominantColor   DominantColor @relation(fields: [dominantColorId], references: [id])
}

model DominantColor {
  id           Int            @id @default(autoincrement())
  blue         Int
  red          Int  
  green        Int
  WardrobeItem WardrobeItem[]
}

model FaceScans{
  id          Int           @id @default(autoincrement())
  userid      Int
  user        User            @relation(fields: [userid],references: [id] )
  image        String 
}
